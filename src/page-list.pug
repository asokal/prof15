extends layouts/default.pug

block inlineStyles
	style(type='text/css').
		.pages-item {
			padding-bottom: 20px;
			margin-bottom: 20px;
			border-bottom: 2px solid rgb(0,0,0, 0.2);
		}
		.pages-item:last-child {
			margin-bottom: 0;
			border: none;
		}
		.pages-item__link {
			font-size: 18px;
			color: #191C21;
			text-transform: uppercase;
		}
		.pages-header {
			padding-top: 40px;
			padding-bottom: 40px;
		}

block content
	.container(style='max-width: 800px; min-height: 100vh; padding-bottom: 50px;')

		h1.h1-style.pages-header Навигация верстки

		.pages
			each val in ['index', '404', 'about', 'articles', 'auth', 'cabinet', 'cart', 'delivery', 'detail-article', 'filter', 'order', 'product']
				.pages-item
					a.pages-item__link(href=`./${val}.html` target='_blank')= val